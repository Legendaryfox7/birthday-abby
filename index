  <!-- audio: place your audio file in the same folder and name it `birthday.mp3` OR change the src -->
  <audio id="bgAudio" loop preload="auto" src="birthday.mp3"></audio>

  <script>
    // small helper to create floating hearts
    const heartsRoot = document.getElementById('hearts-root');
    const rand = (min,max)=> Math.random()*(max-min)+min;

    function spawnHeart(){
      const h = document.createElement('div');
      h.className = 'heart';
      const size = rand(18,46);
      h.style.width = size+'px'; h.style.height = size+'px';
      h.style.left = rand(5,95)+'%';
      h.style.top = '110%';
      h.style.opacity = rand(0.6,1);
      h.style.transform = `translate(-50%,-50%) rotate(${rand(-25,25)}deg)`;
      heartsRoot.appendChild(h);

      const duration = rand(6500,14000);
      const endX = rand(-20,20);
      h.animate([
        { transform: `translate(-50%,-50%) translateY(0) scale(0.9) rotate(${rand(-60,60)}deg)`, opacity: h.style.opacity },
        { transform: `translate(${endX}px,-900px) scale(1.05) rotate(${rand(120,420)}deg)`, opacity: 0 }
      ], {duration, easing:'cubic-bezier(.16,.8,.24,1)'});

      setTimeout(()=>{ h.remove(); }, duration+50);
    }

    // spawn bursts
    setInterval(()=>{ if(Math.random()<0.7) spawnHeart(); }, 420);

    // confetti pieces
    function spawnConfetti(){
      const piece = document.createElement('div');
      piece.className='confetti-piece';
      piece.style.left = Math.random()*100+'%';
      piece.style.top = '-10vh';
      piece.style.background = `hsl(${Math.random()*360} 80% 60%)`;
      piece.style.width = Math.floor(Math.random()*10)+6+'px';
      piece.style.height = Math.floor(Math.random()*14)+8+'px';
      document.body.appendChild(piece);
      const dur = rand(2200,4200);
      piece.animate([
        { transform: 'translateY(0) rotate(0) ', opacity:1 },
        { transform: `translateY(${window.innerHeight+200}px) rotate(${rand(200,900)}deg)`, opacity:0.3 }
      ], {duration:dur, easing:'linear'});
      setTimeout(()=>piece.remove(), dur+50);
    }
    // occasional confetti
    setInterval(()=>{ if(Math.random()<0.12) spawnConfetti(); }, 350);

    // audio controls and autoplay behavior
    const audio = document.getElementById('bgAudio');
    const playBtn = document.getElementById('playBtn');
    const stopBtn = document.getElementById('stopBtn');

    playBtn.addEventListener('click', async ()=>{
      try{
        await audio.play();
      }catch(e){
        // autoplay blocked on some browsers; this click should allow playback.
        console.warn('audio play failed', e);
      }
    });
    stopBtn.addEventListener('click', ()=>{ audio.pause(); audio.currentTime=0; });

    // try gentle autoplay if browser allows (muted). Many browsers block autoplay with sound.
    (async function tryAutoplay(){
      try{
        audio.muted = true;
        await audio.play();
        // if playing muted, unmute after a short time so user hears it (only works if browser allows)
        setTimeout(()=>{ audio.muted = false; }, 700);
      }catch(e){
        // ignore â€” user can press Play
      } finally{ audio.muted=false; }
    })();

    // small accessibility: allow keyboard space to toggle
    document.addEventListener('keydown', e=>{
      if(e.code==='Space'){ e.preventDefault(); if(audio.paused) audio.play(); else audio.pause(); }
    });

    // personalization helper: replace the name on page easily
    // open console and run: document.querySelector('.title').textContent = 'Happy Birthday, Alex ðŸŽ‰'
  </script>
</body>
